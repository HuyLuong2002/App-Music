<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/background_white_corner_16"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_yellow_corner_16_top_left_top_right"
        android:gravity="center"
        android:padding="12dp"
        android:text="Thêm bài hát"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edit_tenbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_corner_10_border_gray"
            android:hint="Tên bài hát"
            android:padding="12dp" />
        <EditText
            android:id="@+id/edit_anhbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_corner_10_border_gray"
            android:focusable="false"
            android:inputType="textUri"
            android:hint="Hình ảnh bài hát"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edit_duongdanbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_corner_10_border_gray"
            android:focusable="false"
            android:inputType="textUri"
            android:hint="Đường dẫn bài hát"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edit_duongdanloibaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_corner_10_border_gray"
            android:focusable="false"
            android:inputType="textUri"
            android:hint="Đường dẫn lời bài hát"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edit_macasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_corner_10_border_gray"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:hint="Mã ca sĩ"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edit_matacgia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_corner_10_border_gray"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:hint="Mã tác giả"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Huy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:alpha="0.4"
                android:background="@drawable/background_gray_corner_10"
                android:text="Hủy"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_ThemBaiHat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/background_yellow_corner_10"
                android:text="Thêm"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>