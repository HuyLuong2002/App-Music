<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_yellow_corner_16_top_left_top_right"
        android:gravity="center"
        android:padding="12dp"
        android:text="Thay đổi mật khẩu"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/edit_passwordHT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_white_corner_10_border_gray"
        android:hint="Nhập mật khẩu hiện tại"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:padding="12dp" />
    <EditText
        android:id="@+id/edit_passwordMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_white_corner_10_border_gray"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:padding="12dp" />
    <EditText
        android:id="@+id/edit_passwordMoiValid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_white_corner_10_border_gray"
        android:hint="Xác nhận mật khẩu mới"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:padding="12dp" />
</LinearLayout>